<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap"
    rel="stylesheet">

  <title>Game review</title>

  <!-- Bootstrap core CSS -->
  <base href="/">
  <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">


  <!-- Additional CSS Files -->
  <link rel="stylesheet" href="css/fontawesome.css">
  <link rel="stylesheet" href="css/templatemo-cyborg-gaming.css">
  <link rel="stylesheet" href="css/owl.css">
  <link rel="stylesheet" href="css/animate.css">
  <link rel="stylesheet" href="https://unpkg.com/swiper@7/swiper-bundle.min.css" />

</head>

<body>

  {{> header user }}

  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="page-content">
          <div class="heading-section">
            <h4><em>User</em> Dashboard</h4>
            {{#if errorMsg}}
            <h5>{{errorMsg}}</h5>
            {{/if}}


            <h2>Welcome <em>{{ user.username }}</em></h2>
            <p>Email: {{ user.email }}</p>
          </div>

          <!-- CONTENT -->
          <div class="gaming-library profile-library">
            <div class="col-lg-12">
              <div class="heading-section">
                <h2>Edit User {{ userToEdit.username }}</h2>
                <form method="post" action="dashboard/users/edit/{{userToEdit._id}}" class="table table-bordered">
                  <table>
                    <thead class="thead-light">
                      <tr>
                        <th>avatar</th>
                        <th>username</th>
                        <th>password</th>
                        <th>re-enter password</th>
                        <th>intro</th>
                        <th>email</th>
                      </tr>
                      <tr>
                        <td colspan="6">
                          <hr>
                        </td>
                      </tr>
                    </thead>
                    <tbody>
                      {{#if userToEdit}}
                      <tr>
                        <td><img src="{{userToEdit.avatar}}" alt="" /></td>
                        <td><input class="form-control" name="username" type="text" value="{{userToEdit.username}}" />
                        </td>
                        <td><input class="form-control" name="password" type="password" value="{{userToEdit.password}}" /></td>
                        <td><input class="form-control" name="repassword" type="password" value="{{userToEdit.password}}" /></td>
                        <td><input class="form-control" name="intro" type="text" value="{{userToEdit.intro}}" /></td>
                        <td><input class="form-control" name="email" type="text" value="{{userToEdit.email}}" /></td>
                      </tr>
                      {{else}}
                      <tr>
                        <td colspan="6">No Users Found!</td>
                      </tr>
                      {{/if}}
                      <tr>
                        <td colspan="6">
                          <input type="hidden" name="id" value="{{userToEdit._id}}">
                          <button type="submit" class="btn btn-primary">Update User</button>
                        </td>
                      </tr>
                    </tbody>
                  </table>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  {{> footer user }}
  </div>
</body>

</html>
