<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap"
        rel="stylesheet">

    <title>Game review</title>

    <!-- Bootstrap core CSS -->
    <base href="/">
    <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">


    <!-- Additional CSS Files -->
    <link rel="stylesheet" href="css/fontawesome.css">
    <link rel="stylesheet" href="css/templatemo-cyborg-gaming.css">
    <link rel="stylesheet" href="css/owl.css">
    <link rel="stylesheet" href="css/animate.css">
    <link rel="stylesheet" href="https://unpkg.com/swiper@7/swiper-bundle.min.css" />

</head>

<body>

    {{> header user }}


    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-content">
                    <div class="heading-section">
                        <h4><em>ADMIN</em> Dashboard</h4>
                        <h2>Welcome <em>{{ user.username }}</em></h2>
                        <p>Email: {{ user.email }}</p>
                        <p>You should only see this page when you are logged in as an administrator!</p>
                    </div>


                    <!-- CONTENT -->
                    <div class="gaming-library profile-library">
                        <div class="col-lg-12">
                            <div class="heading-section">
                                <h2>User List</h2>
                                {{#if hasUsers}}
                                <table class="table table-bordered">
                                    <thead class="thead-light">
                                        <tr>
                                            <th>&nbsp;</th>
                                            <th>avatar</th>
                                            <th>id</th>
                                            <th>username</th>
                                            <th>intro</th>
                                            <th>email</th>
                                            <th>is admin</th>
                                            <th>&nbsp;</th>
                                        </tr>
                                        <tr>
                                            <td colspan="8">
                                                <hr>
                                            </td>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each users}}
                                        <tr>
                                            <td><a href="/admin/dashboard/users/edit/{{_id}}"
                                                    style="color:palevioletred"><strong>Edit</strong></a></td>
                                            <td><img src="{{avatar}}" alt="" /></td>
                                            <td>{{@index}}</td>
                                            <td>{{username}}</td>
                                            <td>{{intro}}</td>
                                            <td>{{email}}</td>
                                            <td>{{#equal role 9}}
                                                Admin
                                                {{else}}
                                                Normal User
                                                {{/equal}}
                                                </td>
                                            <td><a href="/admin/dashboard/users/delete/{{_id}}"
                                                    style="color:palevioletred"><strong>Delete</strong></a></td>
                                        </tr>
                                        {{else}}
                                        <tr>
                                            <td colspan="8">No Users Found!</td>
                                        </tr>
                                        {{/each}}
                                    </tbody>

                                </table>

                                {{else}}
                                <p>No Users</p>
                                {{/if}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {{> footer user }}
    </div>
</body>

</html>